@page
@model Inlämning.Pages.MyEventsModel

@{
    ViewData["Title"] = "MyEvents";
}

<h1>MyEvents</h1>
@if (Model.Event == null)
{
    <p> You have no Events!</p>
    <a asp-page="/Events" type="button" class="btn btn-outline-primary">Click here to Event</a>
}
else if (Model.Event != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Event[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Event[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Event[0].Organizer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Event[0].Place)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Event[0].Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Event[0].Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Event[0].SpotsAvailable)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Event)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Organizer.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Place)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.SpotsAvailable)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}